# frozen_string_literal: true

# Source of the gems
source "https://rubygems.org"

# Specify the Jekyll theme yat, ensuring it's linked to the current directory.
gem "jekyll-theme-yat", path: "."

# Jekyll and its related dependencies
gem "jekyll", ">= 3.5", "< 5.0"
gem "jekyll-feed", "~> 0.9"
gem "jekyll-paginate", "~> 1.1"
gem "jekyll-seo-tag", "~> 2.1"
gem "jekyll-sitemap", "~> 1.3"
gem "jekyll-spaceship", "~> 0.2"

# Specify the version of rake, based on the lockfile
gem "rake", ">= 12.0", "< 13.0"

# Bundler is required and is compatible with versions >= 1.6 and < 3.0
gem "bundler", ">= 1.6", "< 3.0"
